@page
@model ToDoList.Pages.Folders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Folders</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Folders.Id" />
            <div class="form-group">
                <input type="hidden" asp-for="Folders.UserId" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Folders.FolderName" class="control-label"></label>
                <input asp-for="Folders.FolderName" class="form-control" />
                <span asp-validation-for="Folders.FolderName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
                <a asp-page="Index" class="btn btn-primary bi-arrow-return-left">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
